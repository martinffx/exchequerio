{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "build/**", ".react-router/**", ".docusaurus/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"outputs": [],
			"cache": true
		},
		"test:ci": {
			"outputs": ["coverage/**"],
			"cache": true
		},
		"lint": {
			"outputs": [],
			"cache": true
		},
		"format": {
			"outputs": [],
			"cache": false
		},
		"types": {
			"dependsOn": ["^build"],
			"outputs": [],
			"cache": true
		},
		"db:gen": {
			"cache": false
		},
		"db:migrate": {
			"cache": false
		}
	}
}
