{
	"name": "@exchequerio/api",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "dotenvx run -- bun --watch ./src/index.ts",
		"build": "bun build ./src/index.ts --outdir ./dist --target bun",
		"start": "dotenvx run -- bun ./src/index.ts",
		"test": "NODE_ENV=test dotenvx run -f .env.test -- vitest run",
		"test:watch": "NODE_ENV=test dotenvx run -f .env.test -- vitest",
		"test:ci": "NODE_ENV=test dotenvx run -f .env.test -- vitest run --coverage",
		"lint": "biome check ./src && eslint ./src --max-warnings 0",
		"lint:fix": "biome check --write ./src",
		"format": "biome format --write ./src",
		"types": "tsc --noEmit",
		"db:gen": "drizzle-kit generate",
		"db:migrate": "dotenvx run -- drizzle-kit migrate"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.51.1",
		"@fastify/auth": "^5.0.3",
		"@fastify/jwt": "^10.0.0",
		"@fastify/swagger": "^9.6.1",
		"@fastify/swagger-ui": "^5.2.3",
		"@fastify/type-provider-typebox": "^6.1.0",
		"@fastify/under-pressure": "^9.0.3",
		"@sinclair/typebox": "^0.34.41",
		"drizzle-orm": "^0.44.7",
		"fast-jwt": "^6.0.2",
		"fastify": "^5.6.2",
		"fastify-plugin": "^5.1.0",
		"luxon": "^3.7.2",
		"pg": "^8.16.3",
		"pino-pretty": "^13.1.2",
		"radash": "^12.1.1",
		"typeid-js": "^1.2.0",
		"uuid": "^13.0.0"
	},
	"devDependencies": {
		"@exchequerio/biome-config": "workspace:*",
		"@exchequerio/eslint-config": "workspace:*",
		"@exchequerio/typescript-config": "workspace:*",
		"@biomejs/biome": "2.3.7",
		"@faker-js/faker": "^10.1.0",
		"@tsconfig/node-lts": "^22.0.4",
		"@tsconfig/recommended": "^1.0.13",
		"@types/luxon": "^3.7.1",
		"@types/node": "^24.10.1",
		"@types/pg": "^8.15.6",
		"@vitest/coverage-v8": "^4.0.14",
		"drizzle-kit": "^0.31.7",
		"eslint": "^9.39.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.14"
	}
}
