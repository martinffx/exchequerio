{
  "name": "ledger",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "dotenvx run -- tsx ./src/index.ts",
    "dev": "dotenvx run -- tsx watch ./src/index.ts",
    "docker": "docker-compose up -d",
    "test": "dotenvx run -f .env.test -- jest --verbose",
    "test:watch": "dotenvx run -f .env.test -- jest --verbose --watch",
    "test:ci": "dotenvx run -f .env.test -- jest --ci --silent --coverage --coverageReporters=lcov",
    "types": "tsc --noEmit",
    "lint_fast": "biome check ./src",
    "lint_slow": "eslint ./src --max-warnings 0 --quiet",
    "lint": "biome check ./src && eslint ./src --max-warnings 0",
    "format": "biome format --write ./src"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@fastify/auth": "^5.0.3",
    "@fastify/jwt": "^10.0.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-typebox": "^6.1.0",
    "@fastify/under-pressure": "^9.0.3",
    "@sinclair/typebox": "^0.34.41",
    "drizzle-orm": "^0.44.7",
    "fast-jwt": "^6.0.2",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "luxon": "^3.7.2",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.2",
    "radash": "^12.1.1",
    "typeid-js": "^1.2.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@faker-js/faker": "^10.1.0",
    "@jest/globals": "^30.2.0",
    "@tsconfig/node-lts": "^22.0.4",
    "@tsconfig/recommended": "^1.0.13",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/uuid": "^11.0.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-plugin-boundaries": "^4.2.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  }
}
