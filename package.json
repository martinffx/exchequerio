{
  "name": "ledger",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "dotenvx run -- tsx ./src/index.ts",
    "dev": "dotenvx run -- tsx watch ./src/index.ts",
    "docker": "docker-compose up -d",
    "test": "dotenvx run -f .env.test -- jest --verbose",
    "test:watch": "dotenvx run -f .env.test -- jest --verbose --watch",
    "test:ci": "dotenvx run -f .env.test -- jest --ci --silent --coverage --coverageReporters=lcov",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint ./src/**",
    "format": "biome format --write ./src/**"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.31.3",
    "@fastify/auth": "^5.0.2",
    "@fastify/jwt": "^9.0.2",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@fastify/under-pressure": "^9.0.2",
    "@sinclair/typebox": "^0.32.35",
    "drizzle-orm": "^0.36.4",
    "fast-jwt": "^5.0.2",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "luxon": "^3.5.0",
    "pg": "^8.13.1",
    "pino-pretty": "^13.0.0",
    "radash": "^12.1.0",
    "typeid-js": "^1.1.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@faker-js/faker": "^9.3.0",
    "@jest/globals": "^29.7.0",
    "@tsconfig/node-lts": "^22.0.1",
    "@tsconfig/recommended": "^1.0.8",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.28.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
